<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>
  <!--Main Nav Navigation-->
  
<main class="container">
  <div class="row">
    <div class="offset-md-1 col-md-10">
        <h1><%=title %></h1>
        <a href="/contactList/add" class="btn btn-primary" role="button"><i class="fas fa-plus-circle"></i>Add a contact</a>
        <br>
        <table class="table table-bordered table-striped table-hover">
            <!--Header Row-->
            <tr>
                <th class="text-center col-2">Contact Name</th>
                <th class="text-center col-2">Contact Number</th>
                <th class="text-center col-2">Contact Email</th>
                <th class="text-center col-1"></th>
                <th class="text-center col-1"></th>
                </tr>
                <% for(let count=0; count<contactList.length; count ++){%>
                    <tr>
                        <td class="text-center col-2"><%=contactList[count].ContactName%></td>
                        <td class="text-center col-2"><%=contactList[count].ContactNumber%></td>
                        <td class="text-center col 1"><%=contactList[count].ContactEmail%></td>
                        <td class="text-center col-1"><a href="/contactList/edit/<%=contactList[count]._id%>" class="btn btn-primary"><i class="fas fa-pencil-alt"></i>Edit</a></td>
                        <td class="text-center col-1"><a href="/contactList/delete/<%=contactList[count]._id%>" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a></td>
                        </tr>
                        <%}%>
            </table>
        </div>
    </div>
  </main>
  
